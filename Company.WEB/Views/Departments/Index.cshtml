@{
    ViewData["Title"] = "Index";
}

@model List<DepartmentsDto>
<div class="col-lg-12">
     <div class="card">
      <div class="card-body">
          <h4 class="card-title">Departmanlar</h4>
           
                                        
            <div class="table-responsive">
             <table class="table table-striped mb-0" id="CompanyTable">
        
               <thead>
                 <tr>
                 <th>Id</th>
                 <th>Departman Adı</th>
                 <th>Şirket ID</th>
                 
                 <th> </th>
                 </tr>
               </thead>
                <tbody>
                 @foreach(var item in Model)
                 {
                   <tr>
                   <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CompanyID</td>
                    <td >
                        <ul class="list inline mb-0">
                        <li class="list-inline-item">
                            <a  class="px-2 text-primary" asp-controller="Departments" asp-action="Update" asp-route-id="@item.Id"><i class="uil uil-pen font-size-18"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-controller="Departments" method="post" asp-action="Delete" asp-route-id="@item.Id" class="px-2 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                        </li>
                        <li class="list-inline-item dropdown">
                            <a class="text-muted dropdown-toggle font-sixe-18 px-2" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                <i class="uil uil-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="#">Satırı Kopyala</a>
                                
                            </div>
                        </li>
                        </ul>
                    </td>
                  </tr>
                    }
                  </tbody>
               </table>
        </div>
     </div>
    </div> <!--card end-->
  </div>

 @section Scripts{
     <script type="text/javascript">
   $(document).ready(function() {
   $('#CompanyTable').DataTable(
{
       language :{
   
    info: "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
    infoEmpty: "Kayıt yok",
    loadingRecords: "Yükleniyor...",
     zeroRecords: "Eşleşen kayıt bulunamadı",
      search: "Arama:",
    infoFiltered: "(toplam _MAX_ kayıt içerisinden bulunan)",

     buttons: {
        copyTitle: "Panoya kopyalandı.",
        copySuccess: "Panoya %d satır kopyalandı",
        copy: "kopyala",
        print:"Yazdır",
        },
    paginate: {
        first: "İlk",
        last: "Son",
        next: "Sonraki",
        previous: "Önceki"
    },

       },
       dom: 'Bfrtip',
       buttons:['copy','excel','pdf','print'],
       responsive:true }





   );
   });
     
     
     
     
     </script>
 }